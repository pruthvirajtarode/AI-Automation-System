# =============================================================================
# AWS DEPLOYMENT ENVIRONMENT CONFIGURATION
# =============================================================================
# Use this configuration for AWS cloud deployment
# Set these environment variables in AWS Lambda, ECS, or Elastic Beanstalk
# =============================================================================

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================
DEPLOYMENT_ENV=aws
DEBUG=false
APP_NAME=AI Lead Automation System
APP_VERSION=1.0.0

# =============================================================================
# AWS SERVICES CONFIGURATION
# =============================================================================
AWS_REGION=us-east-1
AWS_S3_BUCKET=ai-automation-agent-data
AWS_ACCOUNT_ID=123456789012  # Replace with your AWS account ID

# =============================================================================
# AWS RDS PostgreSQL
# =============================================================================
DATABASE_URL=postgresql://ai_user:${RDS_PASSWORD}@${RDS_ENDPOINT}:5432/ai_automation
RDS_USER=ai_user
RDS_PASSWORD=${SECRETS_MANAGER_RDS_PASSWORD}
RDS_ENDPOINT=ai-automation-db.xxxxx.us-east-1.rds.amazonaws.com

# =============================================================================
# AWS DocumentDB (MongoDB Compatible)
# =============================================================================
MONGODB_URL=mongodb://${DOCUMENTDB_USER}:${DOCUMENTDB_PASSWORD}@ai-automation-mongo.xxxxx.docdb.us-east-1.amazonaws.com:27017/?ssl=true&replicaSet=rs0
DOCUMENTDB_USER=ai_user
DOCUMENTDB_PASSWORD=${SECRETS_MANAGER_DOCUMENTDB_PASSWORD}
DOCUMENTDB_ENDPOINT=ai-automation-mongo.xxxxx.docdb.us-east-1.amazonaws.com

# =============================================================================
# AWS ElastiCache (Redis)
# =============================================================================
REDIS_URL=redis://:${ELASTICACHE_PASSWORD}@ai-automation-cache.xxxxx.cache.amazonaws.com:6379/0
ELASTICACHE_PASSWORD=${SECRETS_MANAGER_REDIS_PASSWORD}
ELASTICACHE_ENDPOINT=ai-automation-cache.xxxxx.cache.amazonaws.com

# =============================================================================
# AWS CREDENTIALS (via IAM Roles - should NOT be hardcoded)
# =============================================================================
# When using ECS/Fargate or Lambda, credentials are provided via IAM role
# Do NOT set these directly - AWS will inject them automatically
# AWS_ACCESS_KEY_ID=<AUTO_INJECTED_BY_IAM_ROLE>
# AWS_SECRET_ACCESS_KEY=<AUTO_INJECTED_BY_IAM_ROLE>

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
HOST=0.0.0.0
PORT=8000
SECRET_KEY=${SECRETS_MANAGER_SECRET_KEY}

# =============================================================================
# EXTERNAL API KEYS (Store in AWS Secrets Manager)
# =============================================================================
OPENAI_API_KEY=${SECRETS_MANAGER_OPENAI_API_KEY}
TWILIO_ACCOUNT_SID=${SECRETS_MANAGER_TWILIO_ACCOUNT_SID}
TWILIO_AUTH_TOKEN=${SECRETS_MANAGER_TWILIO_AUTH_TOKEN}
TWILIO_PHONE_NUMBER=+1234567890

SENDGRID_API_KEY=${SECRETS_MANAGER_SENDGRID_API_KEY}
STRIPE_API_KEY=${SECRETS_MANAGER_STRIPE_API_KEY}

# =============================================================================
# SALESFORCE CONFIGURATION
# =============================================================================
SALESFORCE_CLIENT_ID=${SECRETS_MANAGER_SALESFORCE_CLIENT_ID}
SALESFORCE_CLIENT_SECRET=${SECRETS_MANAGER_SALESFORCE_CLIENT_SECRET}
SALESFORCE_INSTANCE_URL=https://your-instance.salesforce.com

# =============================================================================
# AI MODEL CONFIGURATION
# =============================================================================
AI_MODEL=gpt-4
AI_TEMPERATURE=0.7
AI_MAX_TOKENS=2000

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
CORS_ORIGINS=["https://yourdomain.com","https://app.yourdomain.com"]

# =============================================================================
# MONITORING & LOGGING
# =============================================================================
LOG_LEVEL=INFO
CLOUDWATCH_LOG_GROUP=/ecs/ai-automation-backend

# =============================================================================
# OPENCLAW AGENT
# =============================================================================
OPENCLAW_ENABLED=true
OPENCLAW_VERSION=1.0.0
OPENCLAW_LOG_LEVEL=INFO
