# Environment Variables Configuration
# Copy this file to .env and fill in your values

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=True

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/ai_automation
MONGODB_URL=mongodb://localhost:27017
MONGODB_DATABASE=ai_automation

# Redis Configuration
REDIS_URL=redis://localhost:6379

# API Keys
OPENAI_API_KEY=your_openai_api_key_here
TWILIO_ACCOUNT_SID=your_twilio_sid
TWILIO_AUTH_TOKEN=your_twilio_token
TWILIO_PHONE_NUMBER=+1234567890
SENDGRID_API_KEY=your_sendgrid_api_key

# CRM Integration
SALESFORCE_CLIENT_ID=your_salesforce_client_id
SALESFORCE_CLIENT_SECRET=your_salesforce_secret
SALESFORCE_INSTANCE_URL=https://your-instance.salesforce.com

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# Calendar/Booking
GOOGLE_CALENDAR_API_KEY=your_google_calendar_key
CALENDLY_API_TOKEN=your_calendly_token

# Notifications
NOTIFICATION_EMAIL=admin@company.com
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# App Configuration
SECRET_KEY=your_secret_key_change_this_in_production
APP_NAME=AI Lead Automation System
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
